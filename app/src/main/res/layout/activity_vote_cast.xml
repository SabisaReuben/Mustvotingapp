            </androidx.constraintlayout.motion.widget.MotionLayout>
        </androidx.constraintlayout.motion.widget.MotionLayout>-->

        <!-- floating button to submit selected candidates -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/submitSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_send_white"
            app:fabSize="normal"
            app:fab_colorNormal="@color/colorPrimary"
            app:fab_label="send"
            app:tooltipText="send" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:id="@+id/imagePreviewLayout"
            android:visibility="gone"
            android:background="@color/colorAccent"
            android:layout_gravity="center_vertical|center_horizontal"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:src="@mipmap/profile2"
                android:scaleType="centerCrop"
                android:id="@+id/imagePreview"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_horizontal|top"
                android:text="hello reuben"
                android:background="@color/colorPrimary"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/defaultColor"
                android:id="@+id/nameOnProfilePic"/>
