                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Vote for Women Rep"
                            android:textColor="@color/defaultColor"
                            underline="@{@string/underline}"
                            android:textStyle="bold" />

                        <TextView
                            indicator="@{handler.womenHeader}"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="end|center"
                            android:background="@drawable/ic_expand_less" />
                    </androidx.cardview.widget.CardView>

                    &lt;!&ndash;women rep header and viewStub&ndash;&gt;
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerWomenRep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="@{handler.womenHeader?view.VISIBLE:view.GONE}"
                        android:layoutAnimation="@anim/layout_animation"/>
                </LinearLayout>
            </ScrollView>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/frameLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="3dp"
                android:background="@color/fragmentColor"/>

            &lt;!&ndash;layout containing selected candidates &ndash;&gt;
            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/defaultColor"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageButton
                    android:id="@+id/hideButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_expand_more"
                    app:layout_constraintBottom_toTopOf="@id/recyclerVote"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

