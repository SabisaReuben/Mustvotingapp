<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VoterHome">
<com.google.android.material.appbar.MaterialToolbar
android:layout_width="match_parent"
android:layout_height="?attr/actionBarSize"
app:titleTextColor="@android:color/white"
android:background="@drawable/registration_header"
app:layout_constraintTop_toTopOf="parent"
android:id="@+id/voterHomeToolbar"
app:title="Voter Home"
app:logo="@drawable/ic_home24dp"
    />
<ScrollView
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/colorPrimary"
android:layout_marginTop="?attr/actionBarSize"
app:layout_constraintTop_toTopOf="parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/vote"
        android:layout_height="80dp">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppTheme.MaterialTextView.Header.large"
            android:gravity="center_vertical|center_horizontal"
            app:drawableStartCompat="@drawable/ic_cast"
            android:text="@string/vote"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/viewResultCard"
        app:cardBackgroundColor="@color/colorPrimaryDark">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppTheme.MaterialTextView.Header.large"
            android:text="@string/view_result"
            app:drawableStartCompat="@drawable/ic_format_list"
            android:gravity="center_vertical|center_horizontal"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/viewRegisterCard"
        app:cardBackgroundColor="@color/colorPrimaryDark">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppTheme.MaterialTextView.Header.large"
            android:text="@string/view_register"
            app:drawableStartCompat="@drawable/ic_view"
            android:gravity="center_vertical|center_horizontal"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/viewCandRegisterCard"
        app:cardBackgroundColor="@color/colorPrimaryDark">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppTheme.MaterialTextView.Header.large"
            android:text="@string/view_candidates"
            app:drawableStartCompat="@drawable/ic_view"
            android:gravity="center_vertical|center_horizontal"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/profileCard"
        app:cardBackgroundColor="@color/colorPrimaryDark">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/AppTheme.MaterialTextView.Header.large"
            android:text="@string/profile"
            app:drawableStartCompat="@drawable/ic_profile"
            android:gravity="center_horizontal|center_vertical"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>




    </androidx.constraintlayout.widget.ConstraintLayout>